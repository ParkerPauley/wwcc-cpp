#include <iostream>
#include <cstdio>   
using namespace std;

int main() {

    int integer_value = 42;
    float float_value = 3.14159265f;
    double double_value = 3.14159265;
    char char_value = 'X';
    const char* string_value = "Hello, World!";

    printf("Format Specifier Practice\n");
    printf("------------------------\n\n");

    printf("Integer Formats:\n\n");
    printf("Decimal: %d \n", 42); 
    printf("HexiDecimal: %x \n", 42);
    printf("Octal: %o \n", 42);
    printf("With Width (5) [%5d] \n", 42); 
    printf("Left Allied [%-5d]\n\n", 42);
    
    printf("Float formats:\n\n");
    printf("Default: 3.141593 \n");
    printf("With Presicion: %.2f \n", 3.14159);  
    printf("Scientific Notation %e \n", 3.14);
    printf("Fixed w/ Presicion %.2f\n\n", 3.14159265359);
    
    printf("Character and String formats:\n\n");
    printf("Charater: X\n");
    printf("String: Hello World!\n");
    printf("String w/ Width %20s", "Hello World!");
    
    return 0;
}
